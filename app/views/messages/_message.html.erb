<div class="message_container cnt-<%= message.user.id %>">
    <div class="message_box msg-<%= message.user.id %>">
        <% unless message.room.is_private %>
            <div class="message_user_name"> <%= Profile.find_by(user_id: message.user.id).nick_name %> </div>
        <% end %>
        <div class="message_user_content"> <%= message.body %> </div>
    </div>
</div>