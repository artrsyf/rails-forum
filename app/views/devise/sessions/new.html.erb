<div class="main_log_in">
  <div class="log_in_space">
    <div class="registrations_head"><h2><%= t(:log_in) %></h2></div>
    
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: false,
                    input_html: { autocomplete: "email", placeholder: "Email" },
                    label: 'Email' %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password", size: "0", placeholder: t(:password) },
                    label: 'Password' %>
        <%= f.input :remember_me, as: :boolean, label: "#{t(:remember_me)}" %>
      </div>

      <div class="link_block">
        <div></div>
        <%= link_to t(:forgot_your_email_or_password), new_password_path(resource_name), class: 'registrations_links' %><br />
      </div>

      <div class="form-actions">
        <%= f.button :submit, t(:log_in) %>
      </div>

      <div class="link_block">
        <div style="margin-right: 5px;"><%= t(:new_to_forum) %></div>
        <%= link_to t(:sign_up), new_registration_path(resource_name), class: 'registrations_links' %><br />
      </div>
    <% end %>
  </div>
</div>