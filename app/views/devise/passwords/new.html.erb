<div class="main_log_in">
  <div class="log_in_space">  
    <div class="registrations_head"><h2><%= t(:forgot_your_password) %></h2></div>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>

      <div class="password_reset_info"><%= t(:reset_message) %></div>

      <div class="form-inputs_reset_password">
        <%= f.input :email,
                    required: false,
                    autofocus: false,
                    input_html: { autocomplete: "email", placeholder: "Email" } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, t(:reset_password) %>
      </div>
      <div class="link_block">
        <%= link_to t(:sign_up), new_registration_path(resource_name), class: 'registrations_links', style: "margin-right: 5px;" %><br />
        <span style="color: blue;">â€¢</span>
        <%= link_to t(:log_in), new_session_path(resource_name), class: 'registrations_links', style: "margin-left: 5px;" %><br />
      </div>
    <% end %>
  </div>
</div>
