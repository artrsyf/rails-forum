//%div{id: 'main_page_name'} Posts
.main
  #posts_wrapper
    - @post.each do |post|
      = link_to post, class: "post" do
        .post_info
          Published at
          = time_ago_in_words(post.created_at)
          by
          = post.user.email
        %h2= post.title
        %p= post.content
        .post_actions
          
