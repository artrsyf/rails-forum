//%div{id: 'main_page_name'} Posts
.main
  #posts_wrapper
    - @post.each do |post|
      .post
        = link_to post, class: "post_active" do
          .post_info
            Published at
            = time_ago_in_words(post.created_at)
            by
            = post.user.email
          %h2= post.title
          %p= post.content
        .post_actions_bar
          = button_tag(type: 'submit', class: "repost_button", id: "repost_button_#{post.id}") do
            %i{class: "icon-ok icon-white"} Repost
