<div id="chatroom_wrapper">
    <div id="side_panel">
        <h5> <%= current_user.email %> </h5>
        <h5> <%= current_user %> </h5>
        <!--<h4> Users <h4>
        <%= @users %>-->
        <h4> Rooms <h4>
        <%= render @rooms %>
    </div>
    <div id="room_container">
        <% if @single_room %>
            <div id="single_room">
                <div id="message_inactive_user_name"> <%= @inactive_user_name %> </div>
                <div id="message_inactive_user_status"><%= @inactive_user.online? %></div>
                <%= turbo_stream_from @single_room %>
                <div id="messages">
                    <%= render @messages %>
                </div>
                <%= render 'messages/new_message_form' %>
            </div>
        <% end %>
    </div>
</div>